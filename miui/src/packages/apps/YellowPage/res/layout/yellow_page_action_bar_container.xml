<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.miui.yellowpage.widget.ContactDetailPhotoView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/yellow_page_default_photo"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/photo_mask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/yellow_page_with_photo_mask"
        android:visibility="gone" />

    <include
        android:id="@+id/title_bar"
        layout="@layout/yellow_page_title_bar" />
</FrameLayout>