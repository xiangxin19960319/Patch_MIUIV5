<?xml version="1.0" encoding="utf-8"?>
<com.miui.yellowpage.ui.RechargeOrderListPendingItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        style="@miui:style/V5.Widget.ListView.Item.TrebleLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/original_price"
                style="@miui:style/V5.TextAppearance.List.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/phone_number"
                style="@miui:style/V5.TextAppearance.List.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/recharge_order_phone_number_padding_left" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/actual_price_prefix"
                    style="@miui:style/V5.TextAppearance.List.Secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recharge_actual_price"
                    android:textColor="@miui:color/v5_list_text_color_light" />

                <TextView
                    android:id="@+id/actual_price"
                    style="@miui:style/V5.TextAppearance.List.Secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yellow_page_highlight_text_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/recharge_order_status_description_padding_left" >

                <TextView
                    android:id="@+id/status_description_prefix"
                    style="@miui:style/V5.TextAppearance.List.Secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recharge_status_description"
                    android:textColor="@miui:color/v5_list_text_color_light" />

                <TextView
                    android:id="@+id/status_description"
                    style="@miui:style/V5.TextAppearance.List.Secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yellow_page_highlight_text_color" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/order_id_prefix"
                style="@miui:style/V5.TextAppearance.List.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recharge_order_id" />

            <TextView
                android:id="@+id/order_id"
                style="@miui:style/V5.TextAppearance.List.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:src="@miui:drawable/v5_bottom_bar_top_line_light" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:paddingRight="@dimen/recharge_order_list_pending_item_padding_right" >

        <Button
            android:id="@+id/pay_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/scan_bg"
            android:text="@string/recharge_order_pay" >
        </Button>
    </LinearLayout>

</com.miui.yellowpage.ui.RechargeOrderListPendingItem>