<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:paddingTop="68dip"
        android:paddingLeft="10dip"
        android:orientation="vertical">
        <TextView
            android:id="@+id/listitem_weather_cycle_error_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#FFFFFFFF"
            android:text="@string/act_weather_main_data_null" />
        <ImageView
            android:id="@+id/listitem_weather_cycle_error"
            android:layout_width="95dip"
            android:layout_height="95dip"
            android:layout_gravity="center"
            android:src="@drawable/app_cycle_net_error"
            android:background="#00000000" />
        <ProgressBar
            android:id="@+id/act_weather_main_pbar_load"
            android:layout_width="95dip"
            android:layout_height="95dip"
            android:layout_gravity="center"
            android:indeterminate="true"
            style="@style/circle_main_progressbar" />
    </LinearLayout>
</FrameLayout>