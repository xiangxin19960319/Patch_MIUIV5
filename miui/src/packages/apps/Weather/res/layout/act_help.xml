<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000">
    <com.miui.weather2.view.WeatherVideoView
        android:id="@+id/video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="0px"
        android:layout_marginBottom="0px" />
    <com.miui.weather2.view.ViewWeatherBg
        android:id="@+id/act_help_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="-3px"
        android:layout_marginBottom="-3px" />
    <com.miui.weather2.view.ViewWeatherBg
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF000000"
        android:visibility="gone"
        android:layout_marginRight="-3px"
        android:layout_marginBottom="-3px" />
    <com.miui.weather2.view.ViewGallery
        android:id="@+id/act_help_gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1.0"/>
        <com.miui.weather2.view.ViewPageBar
            android:layout_marginBottom="90dip"
            android:id="@+id/act_help_page_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>
