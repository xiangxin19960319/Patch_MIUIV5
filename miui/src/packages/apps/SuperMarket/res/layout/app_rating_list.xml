<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/common_padding"
    android:paddingRight="@dimen/common_padding"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:text="@string/comment_5_star"
            android:layout_width="@dimen/comment_star_text_width"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:textAppearance="@style/TextAppearance.Title.Comment.Percentage" >
        </TextView>

        <ProgressBar
            android:id="@+id/five_star_progress"
            style="@style/Widget.ProgressBar.ReadOnly"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_padding_medium" />

        <TextView
            android:id="@+id/five_star_percentage"
            android:layout_width="@dimen/comment_percentage_width"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/common_padding_medium"
            android:textAppearance="@style/TextAppearance.Title.Comment.Percentage" >
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/comment_padding_rating_list_item" >

        <TextView
            android:text="@string/comment_4_star"
            android:layout_width="@dimen/comment_star_text_width"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:textAppearance="@style/TextAppearance.Title.Comment.Percentage" >
        </TextView>

        <ProgressBar
            android:id="@+id/four_star_progress"
            style="@style/Widget.ProgressBar.ReadOnly"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_padding_medium" />

        <TextView
            android:id="@+id/four_star_percentage"
            android:layout_width="@dimen/comment_percentage_width"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/common_padding_medium"
            android:textAppearance="@style/TextAppearance.Title.Comment.Percentage" >
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/comment_padding_rating_list_item" >

        <TextView
            android:text="@string/comment_3_star"
            android:layout_width="@dimen/comment_star_text_width"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:textAppearance="@style/TextAppearance.Title.Comment.Percentage" >
        </TextView>

        <ProgressBar
            android:id="@+id/three_star_progress"
            style="@style/Widget.ProgressBar.ReadOnly"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_padding_medium" />

        <TextView
            android:id="@+id/three_star_percentage"
            android:layout_width="@dimen/comment_percentage_width"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/common_padding_medium"
            android:textAppearance="@style/TextAppearance.Title.Comment.Percentage" >
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/comment_padding_rating_list_item" >

        <TextView
            android:text="@string/comment_2_star"
            android:layout_width="@dimen/comment_star_text_width"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:textAppearance="@style/TextAppearance.Title.Comment.Percentage" >
        </TextView>

        <ProgressBar
            android:id="@+id/two_star_progress"
            style="@style/Widget.ProgressBar.ReadOnly"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_padding_medium" />

        <TextView
            android:id="@+id/two_star_percentage"
            android:layout_width="@dimen/comment_percentage_width"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/common_padding_medium"
            android:textAppearance="@style/TextAppearance.Title.Comment.Percentage" >
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/comment_padding_rating_list_item" >

        <TextView
            android:text="@string/comment_1_star"
            android:layout_width="@dimen/comment_star_text_width"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:textAppearance="@style/TextAppearance.Title.Comment.Percentage" >
        </TextView>

        <ProgressBar
            android:id="@+id/one_star_progress"
            style="@style/Widget.ProgressBar.ReadOnly"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_padding_medium" />

        <TextView
            android:id="@+id/one_star_percentage"
            android:layout_width="@dimen/comment_percentage_width"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/common_padding_medium"
            android:textAppearance="@style/TextAppearance.Title.Comment.Percentage" >
        </TextView>

    </LinearLayout>

</LinearLayout>
