<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/show_all_header"
        style="@style/Widget.ListView.Item.TrebleLine" >
        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_padding"
            android:background="@drawable/arrow" />
        <TextView
            android:id="@+id/show_all_header_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/arrow"
            android:layout_marginLeft="@dimen/common_padding"
            android:duplicateParentState="true"
            android:text="@string/show_all_local_app"
            android:textAppearance="@style/TextAppearance.Title"
            android:singleLine="true" />
    </RelativeLayout>
    <RelativeLayout
        style="@style/Widget.ListView.Item.TrebleLine" >
        <Button
            android:id="@+id/update_all"
            android:focusable="true"
            style="@style/Widget.Button.Action"
            android:minWidth="@dimen/action_button_width_large"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/update_all" />
        <TextView
            android:id="@+id/update_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/update_all"
            android:layout_marginLeft="@dimen/common_padding"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.Title" />
    </RelativeLayout>
</LinearLayout>