<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dip" >

    <TextView
        style="@style/ResourceBrowser.ResourceProperty.Title"
        android:text="@string/resource_comment_rate" />

    <LinearLayout style="@style/ResourceBrowser.ResourceProperty.Content" >

        <RatingBar
            android:id="@+id/resource_comment_ratingbar"
            style="@style/Resource.Comment.RatingBar.ReadOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>