<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@miui:style/V5.Widget.EditMode.TopBar"
    android:background="@drawable/miui_header_panel_bg_normal" >

    <Button
        android:id="@+id/action_cancel"
        android:layout_weight="0"
        android:layout_marginLeft="@dimen/miui_title_action_button_margin_horizontal"
        android:background="@drawable/miui_title_button_cancel"
        style="@miui:style/V5.Widget.EditMode.TopBar.Button"
        android:text="@string/discard_label" />

    <TextView
        android:id="@+id/title"
        style="@miui:style/V5.TextAppearance.EditMode"
        android:text="@string/event_create"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center" />

    <Button
        android:id="@+id/action_done"
        android:layout_weight="0"
        android:layout_marginRight="@dimen/miui_title_action_button_margin_horizontal"
        android:background="@drawable/miui_title_button_done"
        style="@miui:style/V5.Widget.EditMode.TopBar.Button.Default"
        android:text="@string/save_label" />

</LinearLayout>