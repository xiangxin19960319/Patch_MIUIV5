<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_page_camera_view_none"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_camera_view_none_bg"
    android:visibility="gone" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/camera_view_none_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/home_camera_view_none"
            android:gravity="center"
            android:text="@string/no_picture_or_video"
            android:textColor="@color/white_70_transparent"
            android:textSize="@dimen/camera_view_none_big_text_size" />

        <TextView
            android:id="@+id/camera_view_none_small_text"
            android:layout_width="@dimen/home_page_camera_view_none_text_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/camera_view_none_small_text_padding_top"
            android:text="@string/camera_view_none_message"
            android:textColor="@color/white_50_transparent"
            android:textSize="@dimen/camera_view_none_small_text_size" />
    </LinearLayout>

    <!-- 增加这一层，为了显示“没有照片或视屏“页面时顶部有圆角 -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@miui:drawable/v5_top_placeholder_mainpage" />

</RelativeLayout>