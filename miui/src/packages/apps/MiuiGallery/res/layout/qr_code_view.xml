<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/qr_code_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:id="@+id/qr_code_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/qr_error_bg"
            >
            <TextView
                android:id="@+id/qr_code_error"
                style="@miui:style/V5.TextAppearance.ProgressDialogMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black_50_transparent"
                android:textSize="13sp"
                android:text="@string/request_qr_code_failed"
                />
            <TextView
                android:id="@+id/retry_btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:background="@miui:drawable/v5_btn_bg_light"
                android:textColor="@color/black_80_transparent"
                android:textSize="13sp"
                android:text="@string/retry_to_request_qr_code"
                />
        </LinearLayout>
        <FrameLayout
            android:id="@+id/qr_code_requesting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/qr_error_bg"
            >
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />
        </FrameLayout>
        <ImageView
            android:id="@+id/qr_code_image"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:scaleType="center"
            android:layout_gravity="center_horizontal"
            />
    </FrameLayout>
    <TextView
        style="@miui:style/V5.TextAppearance.PreferenceCategory"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="@string/scan_qr_code_buttom_text"
        />
</LinearLayout>
