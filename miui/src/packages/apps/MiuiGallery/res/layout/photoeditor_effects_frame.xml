<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PaintingContainer">


    <com.miui.gallery.photoeditor.actions.FrameSurroundAction style="@style/Effect"
        android:tag="@string/frame_white_tooltip">
        <ImageButton
            android:id="@+id/effect_button"
            style="@style/PaintingIcon"
            android:src="@drawable/frame_white"/>
        <TextView
            android:id="@+id/effect_label"
            android:text="@string/frame_white"
            style="@style/PaintingText"/>
    </com.miui.gallery.photoeditor.actions.FrameSurroundAction>

    <com.miui.gallery.photoeditor.actions.FrameSurroundAction style="@style/Effect"
        android:tag="@string/frame_black_tooltip">
        <ImageButton
            android:id="@+id/effect_button"
            style="@style/PaintingIcon"
            android:src="@drawable/frame_black"/>
        <TextView
            android:id="@+id/effect_label"
            android:text="@string/frame_black"
            style="@style/PaintingText"/>
    </com.miui.gallery.photoeditor.actions.FrameSurroundAction>

    <com.miui.gallery.photoeditor.actions.FrameOverlayAction style="@style/Effect"
        android:tag="@string/frame_classic_tooltip" >
        <ImageButton
            android:id="@+id/effect_button"
            style="@style/PaintingIcon"
            android:src="@drawable/frame_classic" />
        <TextView
            android:id="@+id/effect_label"
            style="@style/PaintingText"
            android:text="@string/frame_classic" />
    </com.miui.gallery.photoeditor.actions.FrameOverlayAction>

    <com.miui.gallery.photoeditor.actions.FrameSemicircleAction style="@style/Effect"
        android:tag="@string/frame_semicircle_tooltip" >
        <ImageButton
            android:id="@+id/effect_button"
            style="@style/PaintingIcon"
            android:src="@drawable/frame_semicircle" />
        <TextView
            android:id="@+id/effect_label"
            style="@style/PaintingText"
            android:text="@string/frame_semicircle" />
    </com.miui.gallery.photoeditor.actions.FrameSemicircleAction>

    <com.miui.gallery.photoeditor.actions.FrameMovieAction style="@style/Effect"
        android:tag="@string/frame_movie_tooltip" >
        <ImageButton
            android:id="@+id/effect_button"
            style="@style/PaintingIcon"
            android:src="@drawable/frame_movie" />
        <TextView
            android:id="@+id/effect_label"
            style="@style/PaintingText"
            android:text="@string/frame_movie" />
    </com.miui.gallery.photoeditor.actions.FrameMovieAction>


</LinearLayout>
