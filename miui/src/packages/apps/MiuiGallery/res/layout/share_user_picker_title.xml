<?xml version="1.0" encoding="utf-8"?>

<view xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:miui="http://schemas.android.com/apk/res/com.miui.gallery"
    class="com.miui.gallery.cloud.SizeAwareLinearLayout"
    android:id="@+id/contact_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/title_bar_bg_one_row"
    >
    <FrameLayout
        android:addStatesFromChildren="true"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/recipients_editor_bg">
        <TextView
            android:id="@+id/recipients_viewer_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_email_hint"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:background="@drawable/recipient_editor_bg"
            android:textAppearance="@style/TextAppearance.EditText.Recipient.Secondary"/>
        <ScrollView
            android:id="@+id/recipient_rows_scroller"
            android:addStatesFromChildren="true"
            android:fadingEdge="none"
            android:overScrollMode="never"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <view
                class="com.miui.gallery.cloud.RowLayout"
                miui:horizontalSpacing="4dp"
                miui:verticalSpacing="4dp"
                android:id="@+id/recipient_rows"
                android:addStatesFromChildren="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/recipients_editor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    android:minWidth="40dip"
                    android:gravity="center_vertical"
                    android:background="@drawable/recipient_editor_bg"
                    style="@style/TextAppearance.EditText.Recipient"/>
            </view>
        </ScrollView>
        <LinearLayout
            android:id="@+id/recipients_viewer_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/recipients_viewer"
                android:layout_height="wrap_content"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:background="@drawable/recipient_editor_bg"
                android:textAppearance="@style/TextAppearance.EditText.Recipient"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/recipients_viewer_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.EditText.Recipient.Secondary"
                android:visibility="gone"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/add_recipient_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <Button
            android:id="@+id/add_recipient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add_recipients_bg"/>
        <TextView
            android:id="@+id/recipient_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MessageCounter.Dark"
            android:visibility="gone"/>
    </LinearLayout>
</view>