<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SketchContainer">
    <com.miui.gallery.photoeditor.actions.CropAction style="@style/Effect"
        android:tag="@string/crop_tooltip">
        <ImageButton
            android:id="@+id/effect_button"
            style="@style/SketchIcon"
            android:tag="@string/crop_polymorphism"/>
