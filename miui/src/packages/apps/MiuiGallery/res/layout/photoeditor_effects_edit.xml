            android:id="@+id/effect_label"
            android:text="@string/crop"
            style="@style/SketchText"/>
    </com.miui.gallery.photoeditor.actions.CropAction>
    <com.miui.gallery.photoeditor.actions.RotateAction style="@style/Effect"
        android:tag="@string/rotate_tooltip">
