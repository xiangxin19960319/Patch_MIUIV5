<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SketchContainer">
    <com.miui.gallery.photoeditor.actions.AutoFixAction style="@style/Effect">
        <ImageButton
            android:id="@+id/effect_button"
            style="@style/SketchIcon"
            android:tag="@string/autofix_polymorphism"/>
        <TextView
            android:id="@+id/effect_label"
            android:text="@string/autofix"
            style="@style/SketchText"/>
    </com.miui.gallery.photoeditor.actions.AutoFixAction>
    <com.miui.gallery.photoeditor.actions.RedEyeAction style="@style/Effect"
        android:tag="@string/redeye_tooltip">
        <ImageButton
            android:id="@+id/effect_button"
            style="@style/SketchIcon"
            android:tag="@string/redeye_polymorphism"/>
        <TextView
            android:id="@+id/effect_label"
            android:text="@string/redeye"
            style="@style/SketchText"/>
    </com.miui.gallery.photoeditor.actions.RedEyeAction>
    <com.miui.gallery.photoeditor.actions.SharpenAction style="@style/Effect">
        <ImageButton
            android:id="@+id/effect_button"
            style="@style/SketchIcon"
            android:tag="@string/sharpen_polymorphism"/>
        <TextView
            android:id="@+id/effect_label"
            android:text="@string/sharpen"
            style="@style/SketchText"/>
    </com.miui.gallery.photoeditor.actions.SharpenAction>
    <com.miui.gallery.photoeditor.actions.HighlightAction style="@style/Effect">
        <ImageButton
            android:id="@+id/effect_button"
            style="@style/SketchIcon"
            android:tag="@string/highlight_polymorphism"/>
        <TextView
            android:id="@+id/effect_label"
            android:text="@string/highlight"
            style="@style/SketchText"/>
    </com.miui.gallery.photoeditor.actions.HighlightAction>
    <com.miui.gallery.photoeditor.actions.ContrastAction style="@style/Effect">
        <ImageButton
            android:id="@+id/effect_button"
            style="@style/SketchIcon"
            android:tag="@string/contrast_polymorphism"/>
        <TextView
            android:id="@+id/effect_label"
            android:text="@string/contrast"
            style="@style/SketchText"/>
    </com.miui.gallery.photoeditor.actions.ContrastAction>
    <com.miui.gallery.photoeditor.actions.SaturationAction style="@style/Effect">
        <ImageButton
            android:id="@+id/effect_button"
            style="@style/SketchIcon"
            android:tag="@string/saturation_polymorphism"/>
        <TextView
            android:id="@+id/effect_label"
            android:text="@string/saturation"
            style="@style/SketchText"/>
    </com.miui.gallery.photoeditor.actions.SaturationAction>
    <com.miui.gallery.photoeditor.actions.ColorTemperatureAction style="@style/Effect">
        <ImageButton
            android:id="@+id/effect_button"
            style="@style/SketchIcon"
            android:tag="@string/hue_polymorphism"/>
        <TextView
            android:id="@+id/effect_label"
            android:text="@string/temperature"
            style="@style/SketchText"/>
    </com.miui.gallery.photoeditor.actions.ColorTemperatureAction>
    <com.miui.gallery.photoeditor.actions.VignetteAction style="@style/Effect">
        <ImageButton
            android:id="@+id/effect_button"
            style="@style/SketchIcon"
            android:tag="@string/vignette_polymorphism"/>
        <TextView
            android:id="@+id/effect_label"
            android:text="@string/vignette"
            style="@style/SketchText"/>
    </com.miui.gallery.photoeditor.actions.VignetteAction>
</LinearLayout>
