<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/camera_view_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/home_page_top_bar_camera_view_title_padding" >

    <miui.widget.ImageTextView
        android:id="@+id/camera_count_item"
        style="@style/TitleCountText"
        android:entries="@array/count_entries"
        android:entryValues="@array/count_entryValues"
        android:gravity="center" />

    <TextView
        android:id="@+id/camera_title_item"
        style="@style/TitleDescText"
        android:gravity="center"
        android:text="@string/home_my_captured_items" />

</LinearLayout>