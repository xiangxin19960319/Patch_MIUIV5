<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@miui:style/V5.Widget.ListView.Item.DoubleLine"
    android:background = "@miui:drawable/v5_dialog_list_item_bg_light"
    android:layout_width="match_parent"
    android:gravity="center_vertical|left"
    android:paddingLeft="@dimen/cloud_folder_list_left_padding"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/folder_cover"
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/cloud_folder_list_bimtap_size"
        android:layout_height="@dimen/cloud_folder_list_bimtap_size"
        android:scaleType="fitCenter"/>

    <TextView
        style="@miui:style/V5.TextAppearance.List.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft = "@dimen/cloud_folder_list_text_leftmargin"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/create_new_cloud_folder" />
</LinearLayout>
