<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/ListItem.NewMessagePopup"
    android:gravity="top"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/message_slot_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:background="@drawable/message_sim_bg"
        style="@style/TextAppearance.MessageDesc.Date" />
    <TextView
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.MessageBody" />
</LinearLayout>
