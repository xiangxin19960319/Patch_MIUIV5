<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ResourceBrowser">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ResourceBrowser.ListItem">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ResourceBrowser.HorizontalLine">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ResourceBrowser.ResourceImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@drawable/resource_thumbnail_bg</item>
    </style>

    <style name="ResourceBrowser.ResourceDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ResourceBrowser.ResourceDescription.Vertical">
        <item name="android:gravity">bottom</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ResourceBrowser.ResourceDescription.Horizontal">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="ResourceBrowser.ResourceDescription.Font">
        <item name="android:paddingBottom">30dip</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="ResourceBrowser.ResourceDescription.SubDescription">
        <item name="android:gravity">top</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="ResourceBrowser.ResourceProperty">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_small</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ResourceBrowser.ResourceProperty.Title">
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="ResourceBrowser.ResourceProperty.Content">
        <item name="android:layout_weight">2</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
</resources>
