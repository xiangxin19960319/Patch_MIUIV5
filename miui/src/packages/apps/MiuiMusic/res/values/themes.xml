<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 音乐横屏页 Theme -->
    <style name="LandPageTheme" parent="@miui:style/V5.Theme.Dark.NoTitle">
        <item name="android:windowFullscreen">true</item>
        <item name="miui:v5_list_view_item_bg">@drawable/music_land_divider</item>
    </style>

    <!-- 正在播放页 Theme -->
    <style name="NowplayingPageTheme" parent="@miui:style/V5.Theme.Dark.MainPage">
        <item name="android:actionBarStyle">@style/NowplayingActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:actionBarSize">@dimen/title_bar_large_height</item>
        <item name="miui:v5_bottom_bar_top_line">@null</item>
    </style>

    <!-- 音乐首页 Theme -->
    <style name="MainBrowserTheme" parent="@miui:style/V5.Theme.Dark.ActionBarMovable">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:actionBarStyle">@style/MovableActionBarStyle</item>
        <item name="miui:v5_action_bar_title_layout">@layout/main_playback_browser</item>
        <item name="miui:actionBarMovableLayoutStyle">@style/MovableActionBarLayoutStyle</item>
        <item name="miui:v5_tab_indicator_arrow_style">@style/TabIndicatorArrowGoneStyle</item>
        <item name="miui:v5_tab_indicator_bg">@null</item>
        <item name="miui:v5_bottom_bar_top_line">@null</item>
    </style>

    <!-- 列表选择页 Theme -->
    <style name="PickerActivityTheme" parent="@miui:style/V5.Theme.Dark">
        <item name="miui:v5_bottom_bar_top_line">@null</item>
    </style>

    <!-- 在线 Theme -->
    <style name="OnlineBaseTheme" parent="@miui:style/V5.Theme.Light">
    </style>

    <style name="OnlineAlbumTheme" parent="@miui:style/V5.Theme.Light.ActionBarMovable">
        <item name="android:actionBarStyle">@style/OnlineMovableActionBarStyle</item>
        <item name="miui:actionBarMovableLayoutStyle">@style/OnlineMovableActionBarLayoutStyle</item>
        <item name="miui:v5_action_bar_title_layout">@layout/movable_action_bar_container</item>
        <item name="miui:v5_tab_bg">@null</item>
        <item name="miui:v5_tab_indicator_arrow_style">@style/TabIndicatorArrowGoneStyle</item>
        <item name="miui:v5_tab_indicator_bg">@null</item>
    </style>

    <style name="OnlineArtistTheme" parent="@miui:style/V5.Theme.Light.ActionBarMovable">
        <item name="android:actionBarStyle">@style/OnlineMovableActionBarStyle</item>
        <item name="miui:actionBarMovableLayoutStyle">@style/OnlineMovableActionBarLayoutStyle</item>
        <item name="miui:v5_action_bar_title_layout">@layout/movable_action_bar_container</item>
        <item name="miui:v5_tab_indicator_bg">@drawable/online_tab_container_bg</item>
    </style>

    <!-- 设置页 Theme -->
    <style name="SettingsActivityTheme" parent="@miui:style/V5.Theme.Light.Settings">
    </style>

    <!-- 均衡器Theme -->
    <style name="EqualizerActivityTheme" parent="@miui:style/V5.Theme.Dark.NoTitle">
        <item name="android:dropDownItemStyle">@style/DropDownItemStyle</item>
    </style>
</resources>
