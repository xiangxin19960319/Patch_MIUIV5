<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- For primary text of vertical title -->
    <style name="TitlePrimaryText">
        <item name="android:textSize">@dimen/title_primary_text</item>
        <item name="android:textColor">@color/title_primary_text</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowColor">@color/black_37_transparent</item>
        <item name="android:shadowRadius">9</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- For secondary text of both horizontal and vertical title -->
    <style name="TitleSecondaryText">
        <item name="android:textSize">@dimen/title_secondary_text</item>
        <item name="android:textColor">@color/title_secondary_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- For horizontal secondary text of both horizontal and vertical title -->
    <style name="HorizontalTitleSecondaryText">
        <item name="android:textSize">@dimen/title_secondary_text</item>
        <item name="android:textColor">@color/horizontal_title_secondary_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- For all ListViews of list activity -->
    <style name="PickerListView" parent="@miui:style/V5.Widget.ListView">
        <item name="android:layout_gravity">top|left</item>
    </style>

    <style name="SymPickerListView" parent="@style/PickerListView">
        <item name="android:paddingRight">@dimen/spacing_to_border</item>
    </style>

    <!-- For primary text of list item -->
    <style name="ItemPrimaryText" parent="@miui:style/V5.TextAppearance.List.Primary">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- For secondary text of list item -->
    <style name="ItemSecondaryText" parent="@miui:style/V5.TextAppearance.List.Secondary">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- For item of all pickers -->
    <style name="PickerItemStyle" parent="@miui:style/V5.Widget.ListView.Item.DoubleLine">
    </style>

    <style name="BottomBarText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/bottom_bar_text</item>
        <item name="android:textColor">@color/bottom_bar_text</item>
    </style>

    <!-- For primary icon of item -->
    <style name="ItemPrimaryIcon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scaleType">center</item>
    </style>

    <!-- For search history list -->
    <style name="SearchHistoryListStyle">
        <item name="android:layout_marginLeft">@dimen/spacing_to_border</item>
        <item name="android:divider">@drawable/picker_list_divider</item>
        <item name="android:cacheColorHint">@null</item>
        <item name="android:listSelector">@null</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_gravity">top|left</item>
        <item name="android:footerDividersEnabled">false</item>
    </style>

    <!-- For the text of time indicator -->
    <style name="IndicatorTextStyle">
        <item name="android:textColor">@color/white_30_transparent</item>
        <item name="android:textSize">@dimen/nowplaying_page_time_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">-2dip</item>
    </style>

    <!-- For current line of lyric -->
    <style name="LyricHighLightStyle" parent="@miui:style/V5.TextAppearance.Title">
        <item name="android:layout_marginTop">@dimen/lyric_current_margin_top</item>
        <item name="android:textSize">@dimen/lyric_high_light_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- For non-current line of lyric -->
    <style name="LyricNormalStyle" parent="@miui:style/V5.TextAppearance.Title">
        <item name="android:textSize">@dimen/lyric_normal_text_size</item>
        <item name="android:textColor">@color/white_40_transparent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- For seekbars of equalizer -->
    <style name="EqualizerSeekBarStyle">
        <item name="android:thumb">@drawable/equalizer_thumb</item>
        <item name="android:paddingTop">28dip</item>
        <item name="android:paddingBottom">28dip</item>
        <item name="android:progressDrawable">@android:color/transparent</item>
    </style>

    <!-- For icons on tool bar of MediaPlaybackActivity -->
    <style name="ToolIconStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">center</item>
    </style>

    <!-- For CheckBox while batch selecting -->
    <style name="BatchSelectionCheckBoxStyle" parent="@miui:style/V5.Widget.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 首页播放信息中的 primary text -->
    <style name="MainPrimaryText" parent="@miui:style/V5.TextAppearance.Title">
        <item name="android:textSize">@miui:dimen/v5_text_font_size_main_page_title</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:shadowColor">@color/black_70_transparent</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <!-- 首页播放信息中的 secondary text -->
    <style name="MainSecondaryText">
        <item name="android:textSize">@dimen/main_secondary_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@color/black_70_transparent</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- 正在播放页中的 primary text -->
     <style name="NowplayingPrimaryText" parent="@miui:style/V5.TextAppearance.Title.Large">
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:maxWidth">@dimen/item_text_width</item>
    </style>

    <!-- 正在播放页中的 secondary text -->
    <style name="NowplayingSecondaryText" parent="@miui:style/V5.TextAppearance.Title.Large.Secondary">
        <item name="android:textSize">@dimen/nowplaying_secondary_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxWidth">@dimen/item_text_width</item>
    </style>

    <!-- 首页列表item信息 -->
    <style name="MainItemPrimaryText">
        <item name="android:textSize">@dimen/main_item_primary_text</item>
        <item name="android:textColor">@color/main_item_primary_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="MainItemSecondaryText">
        <item name="android:textSize">@dimen/main_item_secondary_text</item>
        <item name="android:textColor">@color/main_item_secondary_text</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 文字跑马灯效果 -->
    <style name="MarqueeTextStyle">
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <!-- 歌曲详细信息字体 -->
    <style name="TrackDetailText">
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/item_secondary_text</item>
        <item name="android:textColor">@color/white_70_transparent</item>
    </style>

    <!-- Style of AlphabetFastIndexer -->
    <style name="AlphaFastIndexerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="miui:indexerBackground">@drawable/alphabet_indexer_bg</item>
        <item name="miui:indexerTextColor">@color/white_30_transparent</item>
        <item name="miui:overlayBackground">@drawable/alphabet_indexer_overlay</item>
        <item name="miui:overlayMarginTop">@dimen/alphabet_indexer_overlay_margin_top</item>
        <item name="miui:overlayTextSize">@dimen/alphabet_indexer_overlay_text_size</item>
    </style>

    <style name="ErrorMsgTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/error_margin_top</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/error_text_size</item>
        <item name="android:visibility">gone</item>
        <item name="android:text">@string/music_browser_label</item>
    </style>

    <style name="CategorySeparatorStyle">
        <item name="android:visibility">visible</item>
    </style>

    <style name="CategoryNumStyle">
        <item name="android:visibility">visible</item>
        <item name="android:textSize">@dimen/category_num_size</item>
        <item name="android:textColor">@color/white_30_transparent</item>
    </style>

    <!-- Style of playlist grid item -->
    <style name="PlaylistItemStyle">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Style of playlist grid item text-->
    <style name="PlaylistItemTextStyle">
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Style of default EditText -->
    <style name="EditTextStyle">
        <item name="android:padding">6dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- Style of default EditLable -->
    <style name="EditLableStyle">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Style of ComboPreference Text -->
    <style name="ComboPreferenceTitleStyle" parent="@miui:style/V5.TextAppearance.PreferenceList">
    </style>

    <style name="ComboPreferenceSummaryStyle" parent="@miui:style/V5.TextAppearance.List.Secondary">
    </style>

    <!-- Style of online more button -->
    <style name="OnlineMoreButtonStyle">
        <item name="android:layout_marginRight">12.5dp</item>
        <item name="android:layout_gravity">right|bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_list_secondary</item>
        <item name="android:textColor">@color/online_more_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/online_more</item>
    </style>

    <!-- Style of online fragment title -->
    <style name="OnlineFragmentTitleStyle" parent="@miui:style/V5.TextAppearance.List.Primary">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:paddingLeft">12.5dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/online_fragment_title_text_size</item>
    </style>

    <style name="DropDownItemStyle" parent="@miui:style/V5.Widget.DropDownItem">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="NowplayingActionBarStyle" parent="@miui:style/V5.Widget.ActionBar">
        <item name="android:displayOptions"></item>
    </style>

    <style name="MovableActionBarStyle" parent="@miui:style/V5.Widget.ActionBar.Large">
        <item name="android:background">@null</item>
        <item name="android:height">@dimen/mainpage_action_bar_height</item>
        <item name="android:displayOptions">showTitle</item>
    </style>

    <style name="MovableActionBarLayoutStyle" parent="@miui:style/V5.Widget.ActionBarMovableLayout">
        <item name="miui:v5_over_scroll_range">@dimen/movable_action_bar_over_scroll_range</item>
        <item name="miui:v5_scroll_range">@dimen/movable_action_bar_scroll_range</item>
        <item name="miui:v5_initial_motion">@dimen/movable_action_bar_scroll_range</item>
    </style>

    <style name="TabIndicatorArrowGoneStyle" parent="@miui:style/V5.Widget.TabIndicatorArrow">
        <item name="android:visibility">gone</item>
    </style>

    <style name="OnlineMovableActionBarStyle" parent="@style/MovableActionBarStyle">
        <item name="android:height">@dimen/online_movable_action_bar_height</item>
    </style>

    <style name="OnlineMovableActionBarLayoutStyle" parent="@style/MovableActionBarLayoutStyle">
        <item name="miui:v5_scroll_range">@dimen/online_tab_scroll_range</item>
        <item name="miui:v5_initial_motion">@dimen/online_tab_scroll_range</item>
    </style>

    <!-- For seekbars of equalizer -->
    <style name="EQSeekBar">
        <item name="android:thumb">@drawable/eq_thumb</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:progressDrawable">@android:color/transparent</item>
        <item name="android:background">@drawable/eq_progress_bg</item>
    </style>

</resources>