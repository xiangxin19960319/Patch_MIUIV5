<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/online_loading_status_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <include layout="@layout/online_loading_status_bar"/>
    </RelativeLayout>

    <view
        class="com.miui.player.ui.view.FixedListView"
        android:id="@android:id/list"
        style="@style/PickerListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/spacing_to_border"
        android:numColumns="3"
        android:listSelector="@android:color/transparent"
        android:paddingLeft="@dimen/spacing_to_border"
        android:paddingRight="@dimen/spacing_to_border"/>

</LinearLayout>
