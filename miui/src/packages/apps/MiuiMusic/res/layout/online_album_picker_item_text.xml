<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        style="@miui:style/V5.TextAppearance.List.Primary"
        android:id="@+id/primary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="left|bottom"
        android:singleLine="true"
        android:textColor="@color/black_80_transparent"
        android:textSize="@dimen/online_grid_item_primary_text_size" />

    <TextView
        style="@miui:style/V5.TextAppearance.List.Secondary"
        android:id="@+id/secondary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="left|top"
        android:singleLine="true"
        android:textColor="@color/black_50_transparent"
        android:textSize="@dimen/online_grid_item_secondary_text_size" />

</merge>
