<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:paddingTop="@dimen/dirac_headset_item_padding_top" >

    <ImageView
        android:id="@+id/headset_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/headset_name"
        android:layout_width="@dimen/dirac_headset_item_text_width"
        android:layout_height="@dimen/dirac_headset_item_text_height"
        android:layout_below="@id/headset_image"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/toggle_style_text_bg"
        android:duplicateParentState="true"
        android:gravity="center"
        android:textAppearance="@miui:style/V5.TextAppearance.TabIndicator"
        android:textColor="@color/toggle_style_text"
        android:textSize="@miui:dimen/v5_text_font_size_primary" />

    <View
        android:layout_width="@dimen/dirac_headset_item_width"
        android:layout_height="1dp" />

</RelativeLayout>