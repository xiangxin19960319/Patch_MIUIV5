<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/online_pager_bg"
    >

    <TextView
        style="@miui:style/V5.Widget.ListView.Item.SingleLine"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/search_suggestion"
        android:background="@miui:drawable/v5_list_view_middle_item_bg_normal_light"
        android:textColor="@android:color/black"/>

    <ListView
        android:id="@android:id/list"
        style="@style/PickerListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
