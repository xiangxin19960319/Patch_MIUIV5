<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@miui:id/v5_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical|left"
        android:src="?android:attr/homeAsUpIndicator" />

    <TextView
        android:id="@+id/title_text"
        style="@miui:style/V5.TextAppearance.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@miui:id/v5_up" />

    <ImageView
        android:id="@+id/online_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/title_text"
        android:src="@drawable/online_music_logo" />

    <ImageView
        android:id="@+id/goto_nowplaying_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:src="@drawable/goto_nowplaying_selector" />

</RelativeLayout>