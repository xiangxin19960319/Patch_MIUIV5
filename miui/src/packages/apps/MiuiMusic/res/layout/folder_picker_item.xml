<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PickerItemStyle"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/icon"
        style="@style/ItemPrimaryIcon"
        android:layout_gravity="center_vertical"
        android:src="@drawable/folder_icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|left"
        android:orientation="vertical" >

        <include layout="@layout/list_item_double_line_with_separator" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/batch_selection_check"
        style="@style/BatchSelectionCheckBoxStyle" />

    <ImageView
        android:id="@+id/enter_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:scaleType="center"
        android:src="@drawable/enter_indicator" />

</LinearLayout>
