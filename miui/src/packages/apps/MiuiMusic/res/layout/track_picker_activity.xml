<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include layout="@layout/sd_error" />

    <fragment
        android:id="@+id/track_list_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.miui.player.ui.fragment.TrackListFragment" >
    </fragment>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/list_top_shadow" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/list_bottom_shadow" />

</FrameLayout>
